<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_page"
    tools:context="musictag.hytham1.com.mychat.StartPageActivity">


    <Button
        android:id="@+id/already_have_account_button"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="191dp"
        android:background="#fff"
        android:text="Already have an account?"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/need_new_account"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/already_have_account_button"
        android:layout_alignTop="@+id/already_have_account_button"
        android:layout_marginTop="65dp"
        android:background="#fff"
        android:padding="10dp"
        android:text="Need a New Account?"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />
</RelativeLayout>
